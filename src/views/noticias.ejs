<!DOCTYPE html>

<!-- Página donde se muestran varias noticias relacionadas con el mundo automotriz -->

<html lang="es">
    <head>
        <title><%- titulo %></title>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">   

        <!-- Lista de archivos y enlaces a utilizar por el sitio web -->
        <%- include('partials/listaEnlacesUno') %>

        <!-- Utilizando estilos css personalizados -->
        <link rel="stylesheet" type="text/css" href="css/estilosNoticias.css">                                                
    </head>
    <body>
        <header>
            <div class="container-fluid">

                <!-- Encabezado -->
                <%- include('partials/encabezado') %>

                <!-- Menú de navegación -->
                <%- include('partials/navegacion') %>     
                                                                           
            </div> 
        </header>    
        
        <!-- Sección principal -->
        <main>

            <!-- Título -->
            <%- include('partials/noticiasTitulo') %>

            <!-- Sección de noticias o publicaciones -->
            <div class="container-fluid">
                <div class="row justify-content-around">

                  <!-- Noticias o artículos -->
                  <%- include('partials/noticiasArticuloUno') %>
                  <%- include('partials/noticiasArticuloDos') %>
                  <%- include('partials/noticiasArticuloTres') %>

                </div>
            </div>
        </main>

        <!-- Pie de página -->
        <footer class="bg-secondary">
            <div class="container-fluid">
                <div class="row p-5">

                    <!-- Enlaces a las páginas del sitio web -->
                    <%- include('partials/footerPaginas') %>

                    <!-- Información de contacto por redes sociales -->
                    <%- include('partials/footerRedes') %>

                    <!-- Información servicios de la empresa -->
                    <%- include('partials/footerServicios') %>

                    <!-- Información de contacto de la empresa -->
                    <%- include('partials/footerContacto') %>
                </div>                                
            </div> 
            
            <!-- Información derechos de autor -->
            <%- include('partials/footerCopyright') %> 
            
        </footer> 
        
        <!-- JavaScript -->
        <script>            
            function ResaltarOpcion(id, color) {
                document.getElementById(id).style.background = color; 
            }

            function noResaltarOpcion(id, color) {
                document.getElementById(id).style.background = color;
            }
        </script>  
                        
        <!-- Lista de archivos y enlaces a utilizar por el sitio web -->
        <%- include('partials/listaEnlacesDos') %> 
        
        <!-- Archivos JavaScript -->
        <script src="js/btnNoticias.js" type="text/javascript"></script>
    </body>
</html>